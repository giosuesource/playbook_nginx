user  nginx;
worker_processes  1;

pid logs/nginx.pid;

events {
    worker_connections  1024;
}

http {
    log_format combined_ssl '$remote_addr - $remote_user [$time_local] '
                            '$ssl_protocol/$ssl_cipher '
                            '"$request" $status $body_bytes_sent '
                            '"$http_referer" "$http_user_agent" '
                            'rt=$request_time urt=$upstream_response_time';

    server_tokens off;
    large_client_header_buffers 8 64k;
    client_max_body_size 50M;
    client_header_buffer_size 8k;
    client_body_buffer_size 100K;
    client_header_timeout 5s;
    client_body_timeout 5s;

    include mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" ';

    sendfile on;
    keepalive_timeout 65;

    server {
        listen 127.0.0.1:80;
        server_name {{ server_name_a }};

        access_log /var/log/nginx-1.26.2/access.log main;
        error_log /var/log/nginx-1.26.2/error.log warn;

        location / {
            root html;
            deny all;
            index index.html index.htm;
        }

        error_page 404 /404.html;

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
            root html;
        }
    }

    server {
        proxy_headers_hash_max_size 1024;
        proxy_headers_hash_bucket_size 128;

        listen 443 ssl;
        server_name {{ server_name_b }};

        ssl_certificate ../certificate/{{ cert }}.rete.poste.crt;
        ssl_certificate_key ../certificate/{{ cert }}.rete.poste.key;

        ssl_session_cache shared:SSL:50m;
        ssl_session_timeout 5m;

        ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384;
        ssl_protocols TLSv1.2;
        ssl_prefer_server_ciphers on;

        access_log /var/log/nginx-1.26.2/https_access.log combined_ssl;

        add_header Referrer-Policy "origin";
        add_header X-XSS-Protection "1; mode=block";
        add_header Content-Security-Policy "";
        add_header X-Content-Type-Options nosniff;
        add_header X-Frame-Options DENY;
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload";

        location / {
            root /usr/local/nginx-1.26.2/html;
            try_files $uri $uri/ /index.html;
            index index.html;
        }

        location /fdbp/ {
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-For $remote_addr;
            proxy_pass http://{{ proxy_pass_ip }}:8180/fdbp/;
            proxy_redirect default;
            proxy_read_timeout 150;
            proxy_connect_timeout 150;
            proxy_send_timeout 150;
        }

        error_page 404 /404.html;
        location = /40x.html {}

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {}
    }
}

